package test;

import static org.junit.Assert.*;

import model.Player;

import org.junit.Test;

public class PlayerTests {
	Player p = new Player();
	
	@Test
	public void testInit() {
		assertEquals("Points", 0, p.getPoints());
		assertEquals("Proposed Move", 0, p.getProposedMoves());
		assertEquals("Movement Done", 0, p.getMovementsDone());
	} 

	@Test
	public void testChangeValues() {
		p.setPoints(2);
		p.setProposedMoving(2);
		p.setMovementsDone(2);
		assertEquals("Points", 2, p.getPoints());
		assertEquals("Proposed Move", 2, p.getProposedMoves());
		assertEquals("Movement Done", 2, p.getMovementsDone());
	} 
	
}
