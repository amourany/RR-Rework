package test;

import static org.junit.Assert.*;
import game.Board;
import game.Constant;


import org.junit.Test;

public class BoardTests {
	Board b = new Board();
	
	
	@Test
	public void testinit() {
		for (int i=0; i<Constant.NB_BOXES;i++)
		{
			for (int j=0; j<Constant.NB_BOXES;j++)
			{
				assertEquals("Points",b.getGameBoard()[i][j].getType(),Constant.BoxType.Empty);
				assertNull("Color",b.getGameBoard()[i][j].getColor());
				assertFalse("North",b.getGameBoard()[i][j].isNorth());
				assertFalse("South",b.getGameBoard()[i][j].isSouth());
				assertFalse("East",b.getGameBoard()[i][j].isEast());
				assertFalse("West",b.getGameBoard()[i][j].isWest());
			}
		}
	}

}
