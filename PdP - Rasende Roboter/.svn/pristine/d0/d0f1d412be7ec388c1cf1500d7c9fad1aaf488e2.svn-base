package model;

/**
 * Class containing all general constants (sizes) and Enum
 */
public final class Constant {
	
	public static final int frameH = 640;
	public static final int frameW = 800;
	public static final int caseSize = 40;
	public static final int numberOfcase = 16;
	public static final int girdSize= caseSize * numberOfcase;
	
	/**
	 * List of possible directions.
	 */
	public enum Direction {
		Up,
		Down,
		Left,
		Right;
	}

	/**
	 * The color of a box or a robot, required for the choice of the associated image.
	 */
	public enum Color {
		Blue,
		Green,
		Red,
		Yellow,
	}

	/**
	 * The type of a box, required for the choice of the associated image.
	 */
	public enum BoxType {
		Empty,
		Central,
		More,
		Sun,
		Diamond,
		Triangle,
		Multi;
	}
}
