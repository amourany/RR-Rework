package view;

import javax.swing.ImageIcon;
import javax.swing.JOptionPane;
import javax.swing.SpringLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import controller.Controller;


public class GameMenuView extends AbstractView{
    
	public GameMenuView(Controller c, JFrame f) {
		super(c, f); 
		buildContentPane();
	}
	
	public void buildContentPane() {
		
		SpringLayout layout = new SpringLayout();
		contentPane.setLayout(layout);		
		
		JLabel screenTitle = new JLabel("Ricochet Robot");
		screenTitle.setFont(new Font("Serif", Font.PLAIN, 36));
		
		ImageIcon icon =  new ImageIcon("code/images/robots/robotBlue.png");
		JLabel labelLogo = imageShow(layout, icon, 380, 90, "West", "North", contentPane);
		
		JButton startSolo = positionButton(layout, "Start Solo", 0, 150, "HorizontalCenter", "North", contentPane);
		JButton startMulti = positionButton(layout, "Start Multi", 0, 200, "HorizontalCenter", "North", contentPane);
		JButton startHelp = positionButton(layout, "Help", 0, 250, "HorizontalCenter", "North", contentPane);
		JButton startAbout = positionButton(layout, "About", -20, 550, "East", "North", contentPane);
		
		contentPane.add(screenTitle);
		layout.putConstraint(SpringLayout.HORIZONTAL_CENTER, screenTitle, 0, SpringLayout.HORIZONTAL_CENTER, contentPane);
		layout.putConstraint(SpringLayout.NORTH, screenTitle, 30, SpringLayout.NORTH, contentPane);
		contentPane.add(labelLogo);
		
		contentPane.add(startSolo);
		contentPane.add(startMulti);
		contentPane.add(startHelp);
		contentPane.add(startAbout);
		
		startSolo.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent arg0) {
				controller.createOptionsView();
			}
		});
		
		startHelp.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent arg0) {
				controller.createHelpView();
			}
		});
		
		startAbout.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent arg0) {
				JOptionPane.showMessageDialog(frame,
						"License : GNU GPL v3\n\n"+
					    "Olivier Braïk\n" +
					    "Alexandre Delesse\n" +
					    "Gaétan Lussagnet\n" +
					    "Alexandre Mourany\n" +
					    "Dimitri Ranc");
			}
		});	
		
	
		frame.pack();
	}
}
