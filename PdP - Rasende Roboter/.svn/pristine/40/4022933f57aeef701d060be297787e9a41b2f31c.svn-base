package model;

public class Robot {
	public int x;
	public int y;
	private BoxColor color;
	
	public Robot() {
		x = (int)(Math.random() * (15 + 1)); // La position du robot est comprise entre la case 0 et la case 15 (A modifier pour enlever les cases centrales)
		y = (int)(Math.random() * (15 + 1));
	}
	
	public Robot(int x, int y, BoxColor color) {
		this.x = x;
		this.y = y;
		this.color = color;
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}

	public BoxColor getColor() {
		return color;
	}

	public void setColor(BoxColor color) {
		this.color = color;
	}
	
	
}
